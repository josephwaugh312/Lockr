# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/lockr_db

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key-here

# System Encryption Key (for encrypting sensitive data at rest)
# Generate with: openssl rand -hex 32
SYSTEM_ENCRYPTION_KEY=your-32-byte-hex-key-here

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@lockr.app

# Environment
NODE_ENV=development

# Port Configuration
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Settings
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=1800000

# Feature Flags
ENABLE_2FA=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Backup and Migration
CLEAR_PLAINTEXT=false
AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30